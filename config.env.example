# Server
PORT=4010
NODE_ENV=development

# MongoDB (Local)
MONGODB_URI=mongodb://localhost:27017/inventory_service
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=inventory_service

# Redis (Primary for microservices)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Frappe Redis (optional secondary subscriber)
FRAPPE_REDIS_URL=
FRAPPE_REDIS_HOST=127.0.0.1
FRAPPE_REDIS_PORT=13000
FRAPPE_REDIS_PASSWORD=
FRAPPE_REDIS_DB=0

# Pub/Sub channels
REDIS_USER_CHANNEL=user_events

# Feature flags
ENABLE_USER_EVENTS=true
USER_EVENT_DELETE_ENABLED=false
DEBUG_USER_EVENTS=0


